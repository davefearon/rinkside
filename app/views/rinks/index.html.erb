<h1>Listing rinks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Longitude</th>
    <th>Latitude</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rinks.each do |rink| %>
  <tr>
    <td><%= rink.name %></td>
    <td><%= rink.address %></td>
    <td><%= rink.longitude %></td>
    <td><%= rink.latitude %></td>
    <td><%= rink.notes %></td>
    <td><%= link_to 'Show', rink %></td>
    <td><%= link_to 'Edit', edit_rink_path(rink) %></td>
    <td><%= link_to 'Destroy', rink, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

